#!/usr/bin/env bash
set -e
[ -n "$RBENV_DEBUG" ] && set -x

if [ -z "$RBENV_DIR" ]; then
  export RBENV_DIR="$(pwd)"
fi

find-rbenv-vars-files() {
  if [ -e "${RBENV_ROOT}/vars" ]; then
    echo "${RBENV_ROOT}/vars"
  fi

  local root="$RBENV_DIR"
  local results=""
  shopt -s nullglob   # suppress stderr output if glob doesn't match

  while [ -n "$root" ]; do
    if [ -e "${root}/.rbenv-vars" ]; then
      results="${root}/.rbenv-vars"$'\n'"$results"
    fi
    for f in ${root}/.rbenv-vars-* ; do
      results="$f"$'\n'"$results"      # include alternate file in results list
    done
    root="${root%/*}"
  done

  echo -n "$results"
}

sanitize-vars() {
  sed \
    -e "/^[ "$'\t'"]*[A-Za-z_][0-9A-Za-z_]*=/ !d" \
    -e "s/'/'\\\\''/g" \
    -e "s/\(\\\\\\\$\)/'\\1'/g" \
    -e "s/\\\\\\\\/\\\\/g" \
    -e "s/\(\\\$[0-9A-Za-z_][0-9A-Za-z_]*\)/'\\1'/g" \
    -e "s/\(\\\${[0-9A-Za-z_][0-9A-Za-z_]*}\)/'\\1'/g" \
    -e "s/^[ "$'\t'"]*\([A-Za-z_][0-9A-Za-z_]*\)=\(.*\)$/export \\1='\\2'/"
}

while read file; do
  sanitize-vars < "$file"
done < <( find-rbenv-vars-files )
